<Window x:Class="Demos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        Title="MainWindow" Height="350" Width="525" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="427*" />
            <ColumnDefinition Width="76*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="285*" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>
        <TextBlock Name="Output" Grid.Row="0" Grid.ColumnSpan="2" />
        <Button Content="Exec" Grid.Column="1" Grid.Row="1" Height="26" HorizontalAlignment="Left" Name="Exec" VerticalAlignment="Top" Width="76" />
        <toolkit:AutoCompleteBox Grid.Row="1" Name="Input" VerticalAlignment="Top" Height="26" IsTextCompletionEnabled="True" />
    </Grid>
</Window>
